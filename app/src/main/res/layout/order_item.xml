<?xml version="1.0" encoding="utf-8"?>
<com.another1dd.galleryapp.ui.adapters.gallery.SquareHConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/orderItemPlaceholderIvTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <android.support.constraint.Guideline
        android:id="@+id/orderItemPlaceholderIvLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <ImageView
        android:id="@+id/orderItemPlaceholderIv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:src="@drawable/photo_placeholder"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="@id/orderItemPlaceholderIvLeft"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/orderItemPlaceholderIvTop" />

    <android.support.constraint.Guideline
        android:id="@+id/orderItemRemoveButtonIvTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

    <android.support.constraint.Guideline
        android:id="@+id/orderItemRemoveButtonIvLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.01" />

    <android.support.constraint.Guideline
        android:id="@+id/orderItemRemoveButtonIvBot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <ImageView
        android:id="@+id/orderItemRemoveButtonIv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:src="@drawable/remove_button"
        app:layout_constraintBottom_toBottomOf="@id/orderItemRemoveButtonIvBot"
        app:layout_constraintDimensionRatio="172:174"
        app:layout_constraintLeft_toLeftOf="@id/orderItemRemoveButtonIvLeft"
        app:layout_constraintTop_toTopOf="@id/orderItemRemoveButtonIvTop" />

</com.another1dd.galleryapp.ui.adapters.gallery.SquareHConstraintLayout>